[commit]
	gpgsign = true
  verbose = true
[github]
	user = rajivharlalka

[pull]
	rebase = false
[init]
	defaultBranch = main
[alias]
  # Thanks r00k, this creates a pretty graph view of the log
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	mine = log -n 5 --author=$(whoami)

[column]
	ui = auto
[pager]
  diff = delta
  show = delta
[core]
	excludesfile = ~/.gitignore
	editor = nvim
[gpg]
	program = /usr/bin/gpg
[rerere]
	enabled = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[sendemail]
    smtpServer = smtp.gmail.com
    smtpServerPort = 587
    smtpEncryption = tls
    smtpUser = rajivharlalka009@gmail.com
[credential]
    helper = store
[help]
	autocorrect = prompt
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	side-by-side = true
	line-numbers = true
[merge]
	conflictStyle = zdiff3
